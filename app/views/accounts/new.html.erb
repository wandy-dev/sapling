<%= form_for(@account) do |f| %>
  <div class="field">
    <%= f.label :display_name, class: 'label' %>
    <%= f.text_field :display_name, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :username, class: 'label' %>
    <%= f.text_field :username, class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :bio, class: 'label' %>
    <%= f.text_field :bio, class: 'input' %>
  </div>

  <div class="actions">
    <%= f.submit "Setup Profile", class: 'button is-warning' %>
  </div>
<% end %>
